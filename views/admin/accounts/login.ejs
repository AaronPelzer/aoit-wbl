<% include ../../header.ejs %>


<form method="POST" action="/Administration/Login">
    <div class="dvLogin panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title">Sign In</h1>
        </div>
        <div class="panel-body">
            <img class="img-responsive" style="max-width: 125px;" src="/img/lock.png" />

            <% if(success_msg.length > 0) { %>
                <div class="alert alert-danger"><%= success_msg %> </div>
            <% } else if (error_msg.length > 0) { %>
                <div class="alert alert-danger"><%= error_msg %> </div>
            <% } else if(error.length > 0) { %>
                <div class="alert alert-danger"><%= error %> </div>
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="input-group">
                <input class="form-control" name="username" type="text" placeholder="Email" />
            </div>
            <br />
            <input class="form-control" name="password" type="password" placeholder="Password" />
            <br />
            <div >
                <button class="btn btn-lg btn-success" style="width: 100%">Sign In</button>
            </div>
            <br />
        </div>
    </div>
</form>


<% include ../../footer.ejs %>