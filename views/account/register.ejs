<form method="POST" action="Register">
<div class="row loginForm">


<!--
<hr style="clear: both; display: block; width: 96%; background-color: grey; height: 1px;">
-->
    
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <label>Profile</label>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">

        <div class="form-group">
            <label for="tbFirst">First Name *</label>
            <input class="form-control" name="tbFirst" type="text" placeholder="First"   />
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <div class="form-group">
            <label for="tbOsis">Middle</label>
            <input class="form-control" name="tbMiddle" type="text" placeholder="Middle"  />
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <div class="form-group">
            <label for="tbOsis">Last Name *</label>
            <input class="form-control" name="tbLast" type="text" placeholder="Last"   />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <div class="form-group">
            <label for="ddlGender">Gender</label>
            <select class="form-control" name="ddlGender">
                <option>Select Gender</option>
                <option value="2">Female</option>
                <option value="1">Male</option>
                <option value="3">Other</option>
                <!-- HARDCODED OPTIONS * UPDATED IN NEXT
                < % results.ethnicity.forEach(g => { % >
                    <option value="< %= g.ID % >">
                        < %= g.gender % >
                    </option>
                < % }) % >
                -->
            </select>
        </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <div class="form-group">
            <label for="ddlRace">Ethnicity</label>
            <select class="form-control" name="ddlRace">
                <option>Select Ethnicity</option>
                <% results.ethnicity.forEach((r) => { %>
                    <option value="<%= r.ID %>">
                        <%= r.ethnicity %>
                    </option>
                <% }) %>
            </select>
        </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <div class="form-group">
            <label for="tbDOB">Date of Birth</label>
            <input name="tbDOB" class="form-control" type="date"/>
        </div>
    </div>
</div>

<hr>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <label>Account</label>
</div>

<div class="row">
    <div class="col-xs-4 col-sm-4 col-md-5 col-lg-5">
        <div class="form-group">
            <label for="tbEmail">School Email</label>
            <div class="input-group">
                <input class="form-control" name="tbEmail" type="text" placeholder="Email"/>
                <spaN class="input-group-addon">@aoiths.org</span>
            </div>
        </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
        <div class="form-group">
            <label for="tbPath">School Pathway</label>
            <select class="form-control" name="ddlPath">
                <option>Select Pathway</option>
                <% results.pathway.forEach(p => { %>
                    <option value="<%= p.ID %>">
                        <%= p.pathway %>
                    </option>
                <% }) %>
            </select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <div class="form-group">
            <label for="tbOsis">OSIS</label>
            <input class="form-control" name="tbOsis" type="text" placeholder="OSIS" value="123456789"   />
        </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <div class="form-group">
            <label for="tbOsis">Confirm OSIS</label>
            <input class="form-control" name="tbCOsis" type="text" placeholder="OSIS" value="123456789"  />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <button class="btn btn-default" style="float: right;">Register</button>
    </div>
</div>

</form>
