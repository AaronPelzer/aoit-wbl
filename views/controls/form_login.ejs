

<form method="POST" action="Login">
    <div class="dvLogin panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title">Sign In</h1>
        </div>
        <div class="panel-body">
            <img class="img-responsive" 
                src="https://pbs.twimg.com/profile_images/572161594142887936/j3bpsg6C_400x400.jpeg" />

            <% if(success_msg.length > 0) { %>
                <div class="alert alert-danger"><%= success_msg %> </div>
            <% } else if (error_msg.length > 0) { %>
                <div class="alert alert-danger"><%= error_msg %> </div>
            <% } else if(error.length > 0) { %>
                <div class="alert alert-danger"><%= error %> </div>
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="input-group">
                <input class="form-control" name="username" type="text" placeholder="Email" />
                <!-- <span class="input-group-addon" id="basic-addon2">@aoiths.org</span> -->
            </div>
            <br />
            <input class="form-control" name="password" type="password" placeholder="Password (OSIS + Code)" />
            <br />
            <div >
                <button class="btn btn-lg btn-success" style="width: 100%">Sign In</button>
            </div>
            <br />
            <div class="pull-right">
                Don't have an account? <a href="/Account/Register">Create An Account</a>
            </div>
        </div>
    </div>
</form>
