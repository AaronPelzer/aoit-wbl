<% include ../header.ejs %>


<form method="POST" action="update">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="form-group">
                <label for="tbTitle">Title</label>
                <input class="form-control" name="tbTitle" type="text" placeholder="Certification Title" value="<%= results.name %>"/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <div class="form-group">
                <label for="tbAuth">Authority</label>
                <input class="form-control" name="tbAuth" type="text" placeholder="Certifying Authority" value="<%= results.authority %>">
            </div>
        </div>
    
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <div class="form-group">
                <label for="tbDate">Date</label>
                <input class="form-control" name="tbDate"
                        type="date" placeholder="Enter Date" value="<%= results.date %>"/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
            <div class="form-group">
                <label for="tbScore">Score</label>
                <input class="form-control" type="number" name="tbScore" placeholder="Score" value="<%= results.score %>"/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-4">
            <div class="form-group">
                <label for="ddlRace">Comments</label>
                <textarea class="form-control" name="tbComment" placeholder="Enter any comments">  </textarea>  
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <a href="/Student/certification"><div class="btn btn-default">Back</div></a>
            <div class="pull-right">
                <button class="btn btn-default">Save</button>
            </div>
        </div>
    </div>
</form>

<script src="/js/utilities.js"></script>
<% include ../footer.ejs %>
