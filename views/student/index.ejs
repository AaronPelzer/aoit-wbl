<div class="container">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-xs-4 col-sm-4 col-md-3 col-lg-2">
              <img style="width: 125px; height: 125px;" src="http://diaryofasocialgal.com/wp-content/uploads/2016/03/placeholder.png" class="rounded" alt="...">
            </div>
            <div class="col-xs-6 col-sm-7 col-md-9 col-lg-10">
              <h2 class="card-title"><%= student.firstName %> <%= student.lastName %></h2>
              <em><h6 class="card-subtitle mb-2 text-muted">Science Technology Engineering & Mathematic</h6></em>
              <br>
              <a class="float-right" href="/Student/Profile" class="card-link">More Information</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="row" id="grid">

  </div>
</div>  

<script>
    var data = [
      {
        title: "CTE Coursework",
        link: "Courses",
        sub: "School and Afterschool Coursers",
        desc: "List of technical courses during term and total amount of hours applied."
      }, {
        title: "Professional Skills",
        link: "Professional",
        sub: "Personal Development Skills  (Soft Skills)",
        desc: "Job skill development such as time management, communication."
      }, {
        title: "Technical Skills",
        link: "Technical",
        sub: "On-Site applied work (Hard Skills)",
        desc: "Knowledge and capabilities to perform specialized tasks."
      }, {
        title: "Work-Based Learning Activities",
        link: "WBL",
        sub: "---On-Site applied work (Hard Skills)",
        desc: "---Knowledge and capabilities to perform specialized tasks."
      }, {
        title: "Industry-Based Assessments",
        link: "Certification",
        sub: "---On-Site applied work (Hard Skills)",
        desc: "---Knowledge and capabilities to perform specialized tasks."
      }, {
        title: "Resume",
        link: "Upload",
        sub: "Uploaded resume as a file",
        desc: "---Knowledge and capabilities to perform specialized tasks."
      }
    ];

    var html = "";

    for(var i = 0; i < data.length; i++){
      html += `<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4" style="margin-top: 20px"><div class="card"><div class="card-body"><h5 class="card-title">${data[i].title}</h5><h6 class="card-subtitle mb-2 text-muted">${data[i].sub}</h6><p class="card-text">${data[i].desc}</p></div><div class="card-footer">
      <small class="text-muted">Last updated <3> mins ago<a class="float-right" href="/Student/${data[i].link}" class="card-link">More Information</a></small>
    </div></div></div>`;
    }

    document.querySelector("#grid").innerHTML = html;

  </script>
