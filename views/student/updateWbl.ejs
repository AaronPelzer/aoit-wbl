<% include ../header.ejs %>
<br>

<h1><%= title %></h1>
<br/>

<form method="POST" action="">  
    <div class="row">
        <div class="col-sm-12 col-md-3 col-lg-3">
            <div class="form-group">
                <label for="tbDate">Date</label>
                <input class="form-control" name="tbDate" type="date" placeholder="01/01/2001" value="<%= results.activity.date %>" required />
            </div>
        </div>
    
        <div class="col-sm-12 col-md-2 col-lg-2">
            <div class="form-group">
                <label for="ddlWblType">Work Based Learning</label>
                <select class="form-control" name="ddlWblType" required>
                    <option></option>
                    <% for(var i = 0; i < results.wblType.length; i++) { %>
                        <option value="<%= results.wblType[i].ID %>" <% if(results.activity.wblTypeID === i){ %> selected <% }  %>> <%= results.wblType[i].type %> </option>
                    <% } %>
                </select>
            </div>
        </div>
        
    
        <div class="col-sm-12 col-md-4 col-lg-3">
            <div class="form-group">
                <label for="tbOrg">Organization</label>
                <input class="form-control" name="tbOrg" type="text" placeholder="" value="<%= results.activity.organization %>" required />
            </div>
        </div>
    
    
        <div class="col-sm-12 col-md-2 col-lg-2">
            <div class="form-group">
                <label for="tbHours">Hours</label>
                <input class="form-control" name="tbHours" type="number" placeholder="" value="<%= results.activity.hours %>" required/>
            </div>
        </div>
    
    </div>
    
    
    <div class="row">
        <div class="col-sm-12 col-md-9 col-lg-9">
            <div class="form-group">
                <label for="tbComment">Comment(s)</label>
                <textarea class="form-control" name="tbComment" type="text" placeholder=""></textarea>
            </div>
        </div>
    </div>

    <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <a class="btn btn-default" href="/Student/WBL">Back</a>
                <div class="pull-right">
                    <button class="btn btn-default" type="submit">Save</button>
                </div>
            </div>
        </div>
</form>

<script src="/js/utilities.js"></script>
<% include ../footer.ejs %>
